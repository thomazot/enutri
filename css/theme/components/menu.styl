.menu__show:before
    icon('\f0c9')

.menu__hide:before
    icon('\f00d')

.menu
    .products
        margin: 0

    &__show, &__hide
        background: #fff
        color: color1_bg
        font-size: 20px
        padding: 0
        width: 40px
        height: 40px
        box-shadow: none

        &:hover
            background: #fff
            color: color1_bg

    .brands
        &:before
            display: none

        &__list
            box-shadow: none
            padding: 0
            border: 0

            span
                display: none

            a
                display: block
                font-size: 0

@media (max-width: 992px)
    .menu
        position: fixed
        left: 0
        top: 0
        z-index: 100
        width: 100%
        height: 100%
        background: rgba(0, 0, 0, 0.5)
        transition: all 0.2s ease
        visibility: hidden
        opacity: 0

        &__banner
            display: none

        &__header
            display: flex
            justify-content: flex-end

        &.open
            visibility: visible
            opacity: 1

        &__label
            font-size: 18px
            font-weight: medium
            color: #333
            display: flex
            justify-content: space-between
            align-items: center
            height: 40px
            padding-left: 15px

            .ico
                width: 10px
                height: 10px
                fill: color1_bg
                margin-right: 10px

        &__container
            background: #fff
            height: 100%
            width: 320px
            max-width: 90vw
            transform: translateX(-320px)
            transition: all 0.4s ease

            .open &
                transform: translateX(0)

        &__content
            max-height: 0
            overflow-y: auto

            a
                font-size: 14px
                display: block
                padding: 5px 0
                color: #333

            .a--0
                font-weight: bold

            .on &
                padding: 15px
                max-height: 40vh
                display: block

@media (min-width: 993px)
    .menu
        flex: 1
        min-width: 0

        &__banner
            position: absolute
            right: 0
            top: 0
            width: 33.333%
            height: 100%

            img
                width: 100%
                height: 100%
                object-fit: cover

        &__container
            display: flex
            justify-content: space-around
            align-items: center

        &__show
            display: none

        &__header
            display: none

        &__content
            position: absolute
            top: 100%
            left: -140px
            opacity: 0
            visibility: hidden
            transition: all 0.2s ease
            width: 755px
            max-width: calc(100vw - 50px)
            background: #fff
            box-shadow: 0px 0px 15px 0px rgba(22, 23, 40, 0.15)
            border-radius: 4px
            padding: 20px

            &:before
                content: ''
                width: 10px
                height: 10px
                position: absolute
                top: -5px
                left: 190px
                background: #fff
                transform: rotate(45deg)
                border-radius: 3px

        &__label
            font-size: 18px
            font-weight: medium
            color: #333
            display: inline-flex
            justify-content: space-between
            align-items: center
            height: 40px
            padding-left: 15px
            text-transform: lowercase

            .ico
                width: 10px
                height: 10px
                fill: color1_bg
                margin-left: 6px
                margin-bottom: -2px

        &__item
            position: relative
            padding: 10px 0

            &:hover
                .menu__content
                    opacity: 1
                    visibility: visible

        &__item--categoria
            .menu__content
                padding: 0

        .categories
            .box--1
                position: absolute
                top: 0
                left: 100%
                height: 100%
                overflow-y: auto
                width: 100%
                visibility: hidden
                opacity: 0
                padding: 15px 0

            .ul--0
                position: relative
                width: 33.333%
                padding: 15px 0
                background: #f9ede9
                border-radius: 4px 0 0 4px

            .li--0:hover
                .box--1
                    opacity: 1
                    visibility: visible

            .a--0
                font-size: 14px
                font-weight: medium
                color: #333
                display: block
                padding: 5px 15px

                &:hover
                    background: #f4ddd5

            .a--1
                font-size: 14px
                font-weight: medium
                color: #666666
                display: block
                padding: 5px 15px

                &:hover
                    background: #f7f7f7