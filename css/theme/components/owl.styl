.owl
    &-next, &-prev
        width: 40px
        height: 40px
        background: rgba(0, 0, 0, 0.2)
        padding: 0
        box-shadow: none
        border-radius: 50%

        &:before
            display: flex
            justify-content: center
            align-items: center
            font-size: 15px

        &:hover
            background: color1_bg