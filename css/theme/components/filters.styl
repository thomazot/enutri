ico = 'data:image/jpeg;base64,'

@media (max-width: 992px)
    .filters
        .link
            color: #ffffff
            font-size: 14px
            font-weight: medium

        &__filter
            .count
                color: #fff

            .a--0
                font-size: 14px

        &__name
            font-size: 16px
            font-weight: medium
            color: #fff
            text-transform: uppercase

@media (min-width: 993px)
    .filters
        .title
            display: none

        &__name
            font-size: 15px
            font-weight: bold
            color: #eb7800
            text-transform: lowercase

        &__filter
            border-radius: 4px
            box-shadow: 0 0 0 1px #f2f2f2

            .a--0
                font-size: 14px
                font-weight: medium
                color: #666666

                &:before
                    content: ''
                    display: inline-block
                    vertical-align: middle
                    width: 15px
                    height: 15px
                    border-radius: 50%
                    border: solid 1px #f3f3f3
                    margin-right: 3px

                &:hover:before
                    background: url(ico)
                    border: 0

            .count
                font-size: 11px
                color: #999999

            &.categoria
                background: #eef4ed
                box-shadow: none

                .link
                    font-size: 14px
                    font-weight: medium
                    color: #666666
                    padding: 4px 0
                    display: inline-block

        &__swatches
            .li--0
                max-width: none
                flex: 1 1 auto

            .a--0
                &:before
                    display: none

        &__filtered
            display: flex
            justify-content: space-between
            align-items: center
            background: #f7f7f7
            border-radius: 4px
            padding: 10px

            .filtered
                &__filter
                    display: block
                    line-height: 1

                &__name
                    color: #999999
                    opacity: 1
                    font-weight: medium

                &__value
                    display: block
                    font-size: 14px
                    font-weight: medium
                    margin: 0
                    color: #999

                &__clear
                    margin-top: 0
                    font-size: 13px
                    font-weight: medium
                    color: #666666
                    text-transform: lowercase

            .btn--close
                font-size: 13px
                color: #eb7800

            .ul--0
                flex: 1
                min-width: 0
                display: flex

            .li--0
                display: flex
                justify-content: space-between
                box-shadow: none
                font-size: 14px
                color: #999999

                + .li--0
                    margin-left: 10px

            .subtitle
                font-size: 13px
                font-weight: medium
                color: #eb7800
                padding-right: 10px
                margin: 0

                &:before
                    content: 'filtro'

                span
                    display: none
