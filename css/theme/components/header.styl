.header
    width: viewport
    max-width: calc(100% - 30px)
    min-height: 48px

    &-container
        position: sticky
        top: 0
        background: #fff
        transition: all 0.2s ease

        &.up
            position: fixed !important
            top: -80px !important

.opc .header-container
    background: #fff
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1)
    margin-bottom: 40px

    .myaccount
        display: none